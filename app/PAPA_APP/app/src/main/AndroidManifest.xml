<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Activities.papa" >

    <!-- en-US: needed for get telephone number -->
    <!-- ja-JP: 電話番号を取るのに必要 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Use for GPS/Wifi sign in -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="45aeb7238a6690008094ae7e5bbf62bc" />

        <activity android:name=".SignInActivity" >
        </activity>
        <activity
            android:name=".CourseActivity"
            android:label="@string/title_activity_course"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help_activity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".FavoriteActivity"
            android:label="@string/title_activity_favorite"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ExperimentHistoryActivity"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".UploadHistoryActivity"
            android:label="@string/title_activity_upload_history"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".EnterActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".message.MessageActivity"
            android:label="@string/title_activity_message"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".message.MessageDetailActivity"
            android:label="@string/title_activity_message_detail"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <service
            android:name=".message.MessagePullService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".ExperimentActivity"
            android:label="@string/title_activity_experiment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ExperimentDetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_experiment_detail_temp"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail_temp"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CommentActivity"
            android:label="@string/title_activity_comment_temp"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".attendence.AttendenceActivity"
            android:label="@string/title_activity_attendence"
            android:theme="@style/AppTheme.NoActionBar" >

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />


             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>

        <service
            android:name=".attendence.LocationService"
            android:enabled="true" >
        </service>

        <receiver
            android:name=".attendence.NetworkStateChangeBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
