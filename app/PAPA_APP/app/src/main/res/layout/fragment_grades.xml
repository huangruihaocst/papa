<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.Fragments.papa.GradesFragment"
    android:background="#FAFAFA">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/view_grades"
        android:id="@+id/view_grades" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_id"
                android:id="@+id/textView4"
                android:theme="@style/DetailHead"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:theme="@style/DetailContent"
                android:id="@+id/user_id" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_class"
                android:theme="@style/DetailHead"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp"
                android:id="@+id/textView5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:theme="@style/DetailContent"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignLeft="@+id/user_id"
                android:layout_alignStart="@+id/user_id"
                android:id="@+id/user_class" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_grade"
                android:theme="@style/DetailHead"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp"
                android:id="@+id/textView7" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/DetailContent"
                android:textColor="@color/colorPrimary"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="3"
                android:text=""
                android:id="@+id/user_grade"
                android:background="#FAFAFA"
                android:layout_alignTop="@+id/textView7"
                android:layout_alignLeft="@+id/user_class"
                android:layout_alignStart="@+id/user_class" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_comment"
                android:theme="@style/DetailHead"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp"
                android:id="@+id/textView9"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/DetailContent"
                android:textColor="@color/colorPrimary"
                android:inputType="textMultiLine"
                android:text=""
                android:id="@+id/user_comment"
                android:background="#FAFAFA"
                android:layout_alignTop="@+id/textView9"
                android:layout_alignLeft="@+id/user_class"
                android:layout_alignStart="@+id/user_class"
                android:scrollbars="vertical"/>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
