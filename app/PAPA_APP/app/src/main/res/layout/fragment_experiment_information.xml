<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Fragments.ExperimentInformationFragment"
    android:background="#FAFAFA"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_name"
                android:id="@+id/textView1"
                style="@style/DetailHead"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView1"
                android:layout_toEndOf="@+id/textView1"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                style="@style/DetailContent"
                android:id="@+id/sender" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_start_time"
                style="@style/DetailHead"
                android:layout_below="@+id/sender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp"
                android:id="@+id/textView2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/DetailContent"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignLeft="@+id/sender"
                android:layout_alignStart="@+id/sender"
                android:id="@+id/recipient" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_end_time"
                style="@style/DetailHead"
                android:layout_below="@+id/recipient"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DetailContent"
                android:textColor="@color/colorPrimary"
                android:text=""
                android:id="@+id/course_end_time"
                android:background="#FAFAFA"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignLeft="@+id/recipient"
                android:layout_alignStart="@+id/recipient" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_place"
                style="@style/DetailHead"
                android:layout_below="@+id/course_end_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp"
                android:id="@+id/textView4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DetailContent"
                android:textColor="@color/colorPrimary"
                android:text=""
                android:id="@+id/place"
                android:background="#FAFAFA"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignLeft="@+id/recipient"
                android:layout_alignStart="@+id/recipient"
                android:scrollbars="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/download"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/click_here_to_download"
                android:layout_below="@+id/place"
                android:layout_marginTop="23sp"/>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
